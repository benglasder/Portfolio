<section class="section">
    <form action="/about/createToDoItem" method="post">
        <div class="field">
            <div class="control">
                <label for="" class="label">Name</label>
                <input type="text" class="input" placeholder="Refactor..." name="name">
            </div>
        </div>
        <div class="field">
            <label class="label">Category</label>
            <div class="control">
                <div class="select">
                    <select>
                        <option>Front End</option>
                        <option>Back End</option>
                        <option>Dev Ops</option>
                        <option>Other</option>
                    </select>
                </div>
            </div>
        </div>
        <div class="field is-horizontal">
            <div class="field-label">
                <label class="label">Priority (1 = Critical)</label>
            </div>
            <div class="field-body">
                <div class="field is-narrow">
                    <div class="control">
                        <label class="radio">
                            <input type="radio" name="priority">
                            1
                        </label>
                        <label class="radio">
                            <input type="radio" name="priority">
                            2
                        </label>
                        <label class="radio">
                            <input type="radio" name="priority">
                            3
                        </label>
                        <label class="radio">
                            <input type="radio" name="priority">
                            4
                        </label>
                        <label class="radio">
                            <input type="radio" name="priority">
                            5
                        </label>
                    </div>
                </div>
            </div>
        </div>
    </form>
</section>
